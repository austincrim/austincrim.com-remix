{
  "private": true,
  "name": "austincrim.com",
  "description": "the personal site of Austin Crim, a self-taught web developer",
  "license": "",
  "main": "build/index.js",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "NODE_ENV=production tailwindcss -i app/styles/in.css -o app/styles/tailwind.css --minify",
    "deploy": "npm run build && wrangler publish",
    "dev": "remix build && run-p dev:*",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch -k DATA --kv-persist -e .env",
    "dev:remix": "remix watch",
    "dev:css": "tailwindcss -i app/styles/in.css -o app/styles/tailwind.css --watch",
    "postinstall": "remix setup cloudflare",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js"
  },
  "dependencies": {
    "@notionhq/client": "^1.0.4",
    "@remix-run/cloudflare-workers": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "cross-env": "^7.0.3",
    "highlight.js": "^11.5.0",
    "marked": "^4.0.12",
    "notion-to-md": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "6.2.1",
    "remix": "^1.5.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.19.12",
    "@remix-run/dev": "^1.3.4",
    "@tailwindcss/typography": "^0.5.2",
    "@types/marked": "^4.0.3",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "miniflare": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
